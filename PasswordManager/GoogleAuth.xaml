        xmlns:local="clr-namespace:PasswordManager"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Google Authenticator setup" Height="289" Width="370" ResizeMode="NoResize">
    <Grid>
        <Label Content="Scan the QR code with your google authenticator app, or write the &#xD;&#xA;configuration code displayed on the screen." VerticalAlignment="Top" Height="47"/>
        <Image Name="QRcode" HorizontalAlignment="Left" Height="200" Margin="10,52,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Name="CodeLabel" Content="Your code: " HorizontalAlignment="Left" Margin="215,52,0,0" VerticalAlignment="Top" Height="53" Width="139"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="246,223,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</mah:MetroWindow>
